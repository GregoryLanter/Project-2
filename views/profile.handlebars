            <label for="example-text">Username: </label>
            <input type="text" id="username" class="form-control" aria-describedby="example-text"
              placeholder="username">
            <label for="example-text" style="margin-top: 15px;">Password: </label>
            <input type="password" id="password" class="form-control" aria-describedby="example-text"
              placeholder="password">
          </div>
          <button id="submitSignIn" type="button" class="btn btn-primary float-right">Sign In</button>
