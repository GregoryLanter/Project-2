            <label for="example-text">Full Name: </label>
            <input type="text" id="fullname" class="form-control" aria-describedby="example-text"
              placeholder="full name">
            <label for="example-text" style="margin-top: 15px;">Phone Number: </label>
            <input type="text" id="phonenumber" class="form-control" aria-describedby="example-text"
              placeholder="phone number">
              <div id = "validationText" style="display: none;">
