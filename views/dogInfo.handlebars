<!--header for the page-->
<div class="jumbotron" id="jumbo">
  <img title="Sniffer" id="logo" class="image" src="../images/sniffer.png" alt="Sniffer">
</div>
<div class="container-fluid">
  <div class="row" id="dogInfo">
    <div class="col-lg-8">
      <div class="card dogList">
        <div class="card-header">
          <h3>Dogs</h3>
        </div>
        <div class="row">
          <div class="col-md-4">
            <ul>
              {{#each dogs}}
              <li id="dogList"> {{name}} {{breed}} </li>
              {{/each}}
            </ul>
          </div>
          <div class="col-md-7" id="dogData">
            <form>
              <!--get the name-->
              <div class="form-group">
                <label for="name-input">Dog Name</label>
                <input type="text" class="form-control" id="name" placeholder="Enter dog name" />
              </div>
              <!--get the Breed-->
              <div class="form-group">
                <label for="destination-input">Breed</label>
                <input type="text" class="form-control" id="breed" placeholder="Enter Breed" />
              </div>
              <div class="dogButtonContainer">
                <button type="button" class="btn btn-primary" id="addDog">Update</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <img title="cute_dog5" class="image cuteDog5" src="/images/cute-dogs5.jpg" alt="Cute Dog">
    </div>
  </div>
</div>
<script src="/js/dogInfo.js"></script>
<script src="https://cdn.jsdelivr.net/npm/moment@2.24.0/moment.min.js"></script>